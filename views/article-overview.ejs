<!DOCTYPE html>
<html lang="zh">
  <head>
    <%- include("./partials/header") %>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <title>圍棋遊記列表</title>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <main class="article-overview">
      <div class="detail">
        <div class="favorite">
          <h1><%= area.toUpperCase() %></h1>
          <div class="article-items">
            <% articleList.forEach(article=>{ %>
            <div class="item">
              <a href="/article/<%= article._id %> ">
                <div class="img-wrap">
                  <img
                    src="<%= article.mainPic %> "
                    alt="<%= article.title %> "
                  />
                  <div class="overview"><%= article.intro %></div>
                </div>
              </a>
              <div class="intro">
                <div class="title"><%= article.title %></div>
                <% if(typeof(userLoveArticles)=="undefined" || userLoveArticles.indexOf(article._id)==-1){ %> 
                  <div
                  class="likes"
                  data-id="<%= article._id %>"
                  data-likes="<%= article.likes %> "
                  >
                <% }else{ %> 
                  <div
                  class="likes red"
                  data-id="<%= article._id %>"
                  data-likes="<%= article.likes %> "
                >
                <% } %> 
                  <i class="fas fa-heart"></i>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </main>    
    <%- include("./partials/footer") %>
    <script src="/script.js"></script>
  </body>
</html>
